	year         = 2004,
	pages        = "11--17",
    volume       = "4/1",
	url          = "http://CRAN.R-project.org/doc/Rnews/",
	textVersion  = paste("Scrucca, L. (2004).",
		"qcc: an R package for quality control charting and statistical process control.",
		"R News 4/1, 11-17.")
	)

